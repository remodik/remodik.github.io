<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Сервера</title>
    <style>
        body {
            font-family: sans-serif;
            background: #2C2F33;
            color: #FFF;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 30px;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 20px;
        }
        .server-card {
            background: #23272A;
            border-radius: 8px;
            margin: 10px;
            padding: 20px;
            width: 200px;
            text-align: center;
        }
        .server-card img {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: #FFF;
        }
        .server-card h2 {
            font-size: 18px;
            margin: 10px 0 5px;
        }
        .server-card p {
            font-size: 14px;
            margin: 0;
        }
    </style>
</head>
<body>
<h1>Ваши сервера</h1>
<div class="container">
    <% guilds.forEach(g => { %>
        <div class="server-card">
            <img src="<%= g.iconUrl %>" alt="Server Icon">
            <h2><%= g.name %></h2>
            <p>ID: <%= g.id %></p>
        </div>
    <% }) %>
</div>
</body>
</html>
